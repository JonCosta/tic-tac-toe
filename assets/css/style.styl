body {
    padding-bottom: 70px;
}

.b-titles {
    text-align: center
}

// -----------------------------------------

.b-choice {
    display: none
    text-align: center
}

.choice--btn {
    
    font-size: 100px

    &[data-choice="X"] {
        background-color: goldenrod
    }

    &[data-choice="O"] {
        background-color: salmon
    }

    &:hover {
        color: white;
    }
}

// -----------------------------------------

.b-game {
    display: none
}

.game--table {
    text-align: center
    td {
        border: 1px solid #0a0a0a
        padding: 50px
    }
}

// -----------------------------------------

.b-footer {
    background-color: #0a0a0a
}

.navbar-text.footer--text {
    color: #eeeeee
}